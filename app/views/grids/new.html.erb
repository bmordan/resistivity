<%= form_for([@survey, @survey.grid.build]) do |f| %>
  <input type="hidden" name="survey_id" value="<%= @survey.id %>">
  <input type="hidden" name="grid_x" value="<%= @survey.gridx %>">
  <% r=1 %>
  <% @survey.gridy.times do %>
    <% i=1 %>
      <% @survey.gridx.times do %>
        <input name="<%= r.to_s + '|' + i.to_s %>" size="3" class="input-grid">
        <% i+=1 %>
      <% end %>
      *<br />
    <% r+=1 %>
  <% end %>
<hr />
  <%= render 'gridsnav' %>
<% end %>