<!DOCTYPE html>
<html>
<head>
  <title>Resitivity</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  
  <div id="user_nav">
    <% if current_user %>
      <%= current_user.email %> | <%= link_to "Log out", logout_path %>
    <% else %>
      <%= link_to "Create Account", sign_up_path %> | <%= link_to "Login", login_path %>
    <% end %> 
  </div><hr />  
  <%= flash[:notice] %>
  <%= yield %>

</body>
</html>
