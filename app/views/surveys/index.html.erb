<h1>Welcome <%= @user.email.split('@',2)[0] %></h1>
<% if @surveys.empty? %>
  <p class="section">You don't have any Surveys.</p>
<% else %>
<p class="section">Your Resistivity Surveys</p>
<ul>
  <% @surveys.each do |s| %>
  <li>
    <h2><%= link_to s.site, survey_path(s.id) %></h2>
  </li>
  <% end %>
</ul>
<% end %> 
<hr>
<%= render 'navwrapper' %>
